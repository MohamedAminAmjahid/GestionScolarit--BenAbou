@model IEnumerable<GestionScolarité.Models.Enseignant>

@{
    ViewBag.Title = "ListerEnseignants";
}

<h2>Liste des enseignants</h2>

<p>
    @Html.ActionLink("Ajouter un enseignant", "Create")
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Spécialité</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                <td>@Html.DisplayFor(modelItem => item.Mail)</td>
                <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                <td>@Html.DisplayFor(modelItem => item.Specialite)</td>
                <td>
                    <a href="@Url.Action("AffecterMatiere", new { id = item.Id })" class="btn btn-primary">
                        <i class="fa fa-cog" aria-hidden="true"></i> Affecter Matière
                    </a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">
                        <i class="fa fa-info-circle" aria-hidden="true"></i> Détails
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">
                        <i class="fa fa-trash-o" aria-hidden="true"></i> Supprimer
                    </a>
                    <a href="@Url.Action("Matiers", new { id = item.Id })" class="btn btn-warning">
                        <i class="fa fa-graduation-cap" aria-hidden="true"></i> Matières
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
