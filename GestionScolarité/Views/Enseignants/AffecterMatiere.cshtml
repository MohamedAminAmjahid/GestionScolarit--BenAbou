@model GestionScolarité.Models.Matier

@{
    ViewBag.Title = "AffecterMatiere";
}

<head>
    <link rel="stylesheet" href="~/Content/create.css">
</head>

@using (Html.BeginForm()) 
{
    <hr />
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Affecter Matier</h4>
    <hr />

    <div class="form-group">
        @Html.Label("Matière", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Id, (SelectList)ViewBag.Matiers, "Sélectionnez une matiere", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Section", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IdSection, (SelectList)ViewBag.Sections, "Sélectionnez une section", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(model => model.IdSection)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.IdEnseignant, new { Value = ViewBag.IdE })

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Valider" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "ListerEnseignants")
</div>
