@model IEnumerable<GestionScolarité.Models.Administartif>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des administratifs</h2>
<head>
    <link rel="stylesheet" href="~/Content/create.css">
</head>
<p>
    @Html.ActionLink("Ajouter un nouveau administratif", "Create")
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Téléphone</th>
            <th>Age</th>
            <th>Email</th>
            <th>Mot de passe</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Mail)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary">
                        <i class="fa fa-info-circle" aria-hidden="true"></i> Modifier
                    </a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">
                        <i class="fa fa-trash-o" aria-hidden="true"></i> Détails
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">
                        <i class="fa fa-graduation-cap" aria-hidden="true"></i> Supprimer
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
