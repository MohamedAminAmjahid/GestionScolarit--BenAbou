<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "About", "Home")</li>
                    @if (User.Identity.Name == "Directeur")
                    {
                        <li>@Html.ActionLink(User.Identity.Name, "")</li>
                        <li>@Html.ActionLink("Etudiants", "Index", "Etudiants")</li>
                        <li>@Html.ActionLink("Enseignants", "ListerEnseignants", "Enseignants")</li>
                        <li>@Html.ActionLink("Administratifs", "Index", "Administratifs")</li>
                        <li>@Html.ActionLink("Sections", "ListerSections", "Enseignants")</li>
                        <li>@Html.ActionLink("Matieres", "ListerMatieres", "Enseignants")</li>

                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    }
                    else if (User.Identity.Name == "Etudiant")
                    {
                        <li>@Html.ActionLink(User.Identity.Name, "")</li>
                        <li>@Html.ActionLink("Modifier Compte", "Editt", "Etudiants")</li>
                        <li>@Html.ActionLink("Notes", "??", "??")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    }
                    else if (User.Identity.Name == "Enseignant")
                    {
                        <li>@Html.ActionLink(User.Identity.Name, "")</li>
                        <li>@Html.ActionLink("Matieres", "ListerMatieres", "Enseignants")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    }
                    else if (User.Identity.Name == "Administratif")
                    {
                        <li>@Html.ActionLink(User.Identity.Name, "")</li>
                        <li>@Html.ActionLink("Etudiants", "ListerEtudiant", "Etudiants")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Authentification", "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2023-@DateTime.Now.Year -AMJAHID-ZAHRAOUI Gestion de Scolarité(ESISA)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
