@model IEnumerable<GestionScolarité.Models.Section>

@{
    ViewBag.Title = "ListerSections";
}

<h2>ListerSections</h2>

<p>
    @Html.ActionLink("Create New", "AddSection")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSection", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteSection", new { id=item.Id })
        </td>
    </tr>
}

</table>
