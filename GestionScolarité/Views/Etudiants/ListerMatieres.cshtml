@model IEnumerable<GestionScolarité.Models.Note>

@{
    ViewBag.Title = "ListerMatieres";
    List<string> matiers = ViewBag.resultat;
}
<h2 class="text-center">Relevé de notes</h2>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (User.Identity.Name == "Directeur")
            {
                <p>
                    @Html.ActionLink("Ajouter une matière", "AddMatiere", null, new { @class = "btn btn-primary" })
                </p>
            }

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Note</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (string item in matiers)
                    {
                        <tr>
                            <td>@item.Split(';')[0]</td>
                            <td>@item.Split(';')[1]</td>
                            <td>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>